<form method="post" action="{{ path('taxon_delete', {'slug': taxon.slug}) }}" onsubmit="return confirm('Êtes vous certain de vouloir supprimer cette entrée ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ taxon.id) }}">
    <button class="btn">Supprimer</button>
</form>
